class Solution {
    static int sumOfNaturals(int n) {
        // code here
        
        int mod = (int)(Math.pow(10,9)+7);//to convert it from double to int
        long res = ((long)n*(long)(n+1))/2;//it will be a large number to store that's why converting in long
        return (int)(res%mod); //to get the result in integer format.
    }
};

