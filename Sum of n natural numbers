import java.util.*;

class dsa {

    static int sum(int n) {
       if(n == 0)
         return 0;
       return n + sum(n - 1);

    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        System.out.println(sum(n));
    }
}
