import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);        
		int n = sc.nextInt(); 
		int odd=0 , even = 0;
		int digit; 
		// Write your code here
		while(n>0){
			digit = n%10;
			n = n/10;
			if(digit % 2 ==0){
				odd += digit;
			}else{
				even += digit;
			}
		}
		System.out.println(odd +" "+ even);

	}
}
