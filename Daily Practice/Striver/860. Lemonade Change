class Solution {
    public boolean lemonadeChange(int[] bills) {
       int cnt5 = 0;
        int cnt10 = 0;

        for (int bill : bills) {
            if (bill == 5) {
                cnt5++;
            } else if (bill == 10) {
                if (cnt5 > 0) {
                    cnt5--;
                    cnt10++;
                } else {
                    return false;
                }
            } else { // When the bill is 20
                if (cnt10 > 0 && cnt5 > 0) {
                    cnt10--;
                    cnt5--;
                } else if (cnt5 >= 3) {
                    cnt5 -= 3;
                } else {
                    return false;
                }
            }
        }
        return true;
    }
}
